doctype 5
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap-responsive.min.css')
    script(src='/javascripts/jquery-1.9-1.min.js')
    script(src='/javascripts/bootstrap.min.js')
  body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          button.btn.btn-navbar(type='button', data-toggle='collapse', data-target='.nav-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.brand(href='#') Niagara Trails
          .nav-collapse.collapse
            - class_name = 'active'
            ul.nav
              li(class="#{(page_name == 'home') ? 'active' : ''}")
                a(href='/') Home
              li(class="#{(page_name == 'nearby-trails') ? 'active' : ''}")
                a(href='/nearby-trails') Nearby Trails
              li(class="#{(page_name == 'about') ? 'active' : ''}")
                a(href='/about') About
              .nav-collapse 
    .container
      block content